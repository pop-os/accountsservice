#!/usr/bin/make -f
# -*- makefile -*-

export DEB_LDFLAGS_MAINT_APPEND=-Wl,--as-needed

BUILD_GTKDOC := -Dgtk_doc=true
ifneq ($(filter nodoc, $(DEB_BUILD_OPTIONS)),)
  BUILD_GTKDOC := -Dgtk_doc=false
else
ifeq ($(shell which gtkdoc-scan),)
  BUILD_GTKDOC := -Dgtk-doc=false
endif
endif

extra_meson_options =

ifeq ($(DEB_HOST_ARCH_OS),linux)
extra_meson_options += -Dsystemd=true
endif

%:
	dh $@ --with=gir

override_dh_makeshlibs:
	dh_makeshlibs -V -- -c4

override_dh_auto_configure:
	dh_auto_configure -- \
		$(BUILD_GTKDOC) -Ddocbook=true \
		-Dgdmconffile=/etc/gdm3/daemon.conf \
		-Dadmin_group=sudo \
		-Dsystemdsystemunitdir=/lib/systemd/system \
		-Dintrospection=true \
		$(extra_meson_options)

override_dh_installchangelogs:
	dh_installchangelogs NEWS
